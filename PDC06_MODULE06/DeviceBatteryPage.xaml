<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PDC06_MODULE06.DeviceBatteryPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Battery Status"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" FontSize="Large" TextColor="White" FontAttributes="Bold"/>
            <Label x:Name="LabelBatteryLevel"
                   VerticalOptions="CenterAndExpand"
                   HorizontalOptions="CenterAndExpand"
                   TextColor="Wheat" FontAttributes="Bold"
                   FontSize="30"/>
                
        </StackLayout>
    </ContentPage.Content>
</ContentPage>